  gem "cucumber-rails"
  gem "haml-rails"
  gem "thin"
  gem "faker"
end

group :test, :development do
  gem "rspec-rails"
  gem "cucumber"
  gem "spork"
  gem "capybara"
  gem "launchy"
end

