%h2.post_title
  = @post.title
.post_date
  = pretty_date @post.created_at
.post_body
  = preserve markdown @post.body
%hr/
.comments
  = semantic_form_for(@comment) do |form|
    = form.input :author
    = form.input :body
    = form.input :post_id, :as => :hidden
    = form.commit_button
  - @comments.each do |comment|
    %h3.comment
      = comment.author
    = markdown comment.body
